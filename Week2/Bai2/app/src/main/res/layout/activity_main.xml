<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#1976D2"
            android:layout_weight="1"
            android:id="@+id/rl1"
    >
        <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:id="@+id/text1"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and you can discover best news around"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:id="@id/text2"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="the world"
                      android:textColor="#FFFFFF"
                      android:layout_below="@id/text2"
            />


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#FFFFFF"
    >
        <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >
            <EditText
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/edt1"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password (optional)"
                    android:layout_below="@+id/edt1"
                    android:layout_alignLeft="@+id/edt1"
                    android:id="@+id/edt2"
                    android:layout_marginRight="35dp"

            />
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt2"
                    android:id="@+id/cb1"
                    android:layout_alignLeft="@+id/edt1"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember me"
                    android:layout_toRightOf="@+id/cb1"
                    android:layout_alignBaseline="@+id/cb1"
                    android:textColor="#263238"

            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cb1"
                    android:background="@drawable/rounded_button"
                    android:text="LOGIN"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginTop="45dp"
                    android:layout_alignLeft="@+id/edt1"
                    android:layout_alignRight="@+id/edt1"
            />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
