<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:background="#FDCFCFD3">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v7.widget.CardView android:layout_width="370dp"
                                                android:layout_height="500dp"
                                                android:textAlignment="center"
                                                android:id="@+id/card1"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/cardview_dark_background"
                                                android:layout_marginTop="38dp"
                                                app:cardBackgroundColor="#FAFAFA">

                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/text"
                              android:text="Our Team"
                              android:textSize="40dp"
                              android:textColor="#212121"
                              android:textStyle="bold"
                              android:layout_centerHorizontal="true"
                    />

                    <ImageView
                            android:layout_width="135dp"
                            android:layout_height="136dp"
                            app:srcCompat="@drawable/dat"
                            android:id="@+id/imageView"
                            android:layout_below="@+id/text"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="38dp"/>


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/text"
                              android:layout_marginLeft="35dp"
                              android:text=" Dat Hoang\n Firm ware"
                              android:textSize="20dp"
                              android:textColor="#455A64"
                              android:layout_marginTop="180dp"/>

                    <ImageView
                            android:layout_width="135dp"
                            android:layout_height="136dp" app:srcCompat="@drawable/nhi"
                            android:id="@+id/imageView2"
                            android:layout_below="@+id/text"
                            android:layout_toRightOf="@+id/imageView"
                            android:layout_marginTop="249dp"
                            android:layout_marginLeft="56dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/text"
                              android:layout_marginLeft="220dp"
                              android:text="Linh Huynh\n Firm ware"
                              android:textSize="20dp"
                              android:textColor="#455A64"
                              android:layout_marginTop="182dp"/>

                    <ImageView
                            android:layout_width="135dp"
                            android:layout_height="136dp"
                            app:srcCompat="@drawable/cuong"
                            android:id="@+id/imageView3"
                            android:layout_below="@+id/text"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="247dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/text"
                              android:layout_marginLeft="35dp"
                              android:text="Hoang Ngoc\n Soft ware"
                              android:textSize="20dp"
                              android:textColor="#455A64"
                              android:layout_marginTop="388dp"/>

                    <ImageView
                            android:layout_width="135dp"
                            android:layout_height="136dp" app:srcCompat="@drawable/linh"
                            android:id="@+id/imageView4"
                            android:layout_below="@+id/text"
                            android:layout_toRightOf="@+id/imageView"
                            android:layout_marginTop="39dp"
                            android:layout_marginLeft="54dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/text"
                              android:layout_marginLeft="220dp"
                              android:text="Nhi Nguyen\n Soft ware"
                              android:textSize="20dp"
                              android:textColor="#455A64"
                              android:layout_marginTop="391dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="370dp"
                                                android:layout_height="200dp"
                                                android:textAlignment="center"
                                                android:id="@+id/card2"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/cardview_dark_background"
                                                android:layout_marginTop="38dp"
                                                app:cardBackgroundColor="#FAFAFA"
                                                android:layout_below="@+id/card1">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/text1"
                              android:text="Mission"
                              android:textSize="40dp"
                              android:textColor="#212121"
                              android:textStyle="bold"
                              android:layout_centerHorizontal="true"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Welcome to K15 Fetel, our team number is 5. Our team have two product about design layout base on Android studio code IDE and this is the second object of homework on this week."
                              android:id="@+id/text2"
                              android:layout_below="@+id/text1"
                              android:layout_marginLeft="10dp"


                    />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="370dp"
                                                android:layout_height="450dp"
                                                android:textAlignment="center"
                                                android:id="@+id/card3"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/cardview_dark_background"
                                                android:layout_marginTop="38dp"
                                                app:cardBackgroundColor="#FAFAFA"
                                                android:layout_below="@+id/card2">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/text3"
                              android:text="Address"
                              android:textSize="40dp"
                              android:textColor="#212121"
                              android:textStyle="bold"
                              android:layout_centerHorizontal="true"
                    />


                    <ImageView
                            android:layout_width="400dp"
                            android:layout_height="300dp" app:srcCompat="@drawable/m_map"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/imageView6"
                            android:layout_below="@+id/text3"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="874 Nguyen Trai Stress \nWard 14, District 5, Ho Chi Minh City \nVietnam "
                              android:id="@+id/text4"
                              android:layout_below="@+id/imageView6"
                              android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp"
                              android:layout_marginTop="2dp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
    </RelativeLayout>

    </ScrollView>
</LinearLayout>